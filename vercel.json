{
    "version": 2,
    "functions": {
      "api/screenshot.js": {
        "runtime": "nodejs18.x",
        "maxDuration": 30,
        "memory": 1024
      }
    },
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "POST, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type"
          }
        ]
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/index.html"
      }
    ]
  }